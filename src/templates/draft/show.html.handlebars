<html data-theme="light">
  <head>
    <title>{{ tumulte.title }} | draft | tumultes</title>

    <meta charset="utf8">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.purple.min.css" />

  </head>

  <body class="draft show">
    <main class="container-fluid">
      <article>
        <nav>
          <ul>
            <li>
              <hgroup>
              <h1>
                 {{ tumulte.title }}
              </h1>
              <p>
                <small><a href="{{ tumulte.locations.http_root}}"><strong>Tumulte</strong></a> publié par <strong>{{#each tumulte.curators }} {{ . }} {{/each}}</strong></small>
                <small>le <strong>{{ tumulte.creation_date_pretty }}</strong></small>
              </p>
              </hgroup>
            </li>
          </ul>
          <ul></ul>
          <ul>
            <li><a href="" role="button"  data-placement="left" data-tooltip="Synchronisation de l'interface avec la dernière version du tumulte">↻</a></li>
            <li>
              <a role="button"  data-placement="left" data-tooltip="Édition du contenu" href="{{ tumulte.locations.share_url }}" target="_blank">✎</a>
            </li>
            <li>
              <a id="preview" role="button"  data-placement="left" data-tooltip="Aperçu de l'aspect qu'aura la page publique" href="{{ tumulte.locations.preview_url }}" target="_blank">◎</a>
            </li>
            {{#if tumulte.ready }}
            <li><a  data-placement="left" data-tooltip="Libérer le tumulte" role="button" href="{{ tumulte.locations.dist_url }}" target="_blank" style="background-color: #00895A;">✓</a></button></li>
            {{else}}
            <li><a role="button" data-tooltip="Ce tumulte n'est pas encore prêt à être publié" data-placement="left" href="#" target="_blank" style="background-color: red;">☒</a></li>
            {{/if}}
          </ul>
        </nav>
        </article>
      <article>
        <h3>style</h3>
        <hr>

    <form>
      <fieldset>
        <label>
          Thème
          <select id="theme" name="theme" aria-label="Choisissez un thème" required>
            <option selected disabled value="">
              Choose your lover
            </option>
            <option>default</option>
            <option>simple</option>
          </select>
          </label>
        <fieldset>
        <label>
          Custom CSS
        <textarea name="custom_css">

        </textarea>
        </label>
        </fieldset>
        </form>
      </article>

      <article class="grid">

        <article>
          <details>
            <summary role="button">images</summary>
            <p>
              <small>L'image de couverture est obligatoire et son nom de fichier doit être <kbd>cover.png</kbd> (ou autre extension d'image)</small>
            </p>
          </details>

          <hr>

          {{#if tumulte.cover.url }}
          <img src="{{ tumulte.cover.url }}" />
          {{/if}}
        </article>

        <article>
          <details>
            <summary role="button">audio</summary>
            <p>
              <small>
                Les fichiers doivent être au format MP3 et se nommer <kbd>number - artist - titre.mp3</kbd>.
              </small>
            </p>
          </details>

          <hr>

          {{#if tumulte.tracks.length}}
          <ol>
          {{#each tumulte.tracks}}
            {{#if well_formed}}
            <li><a href="{{ url }}">{{ artist }} - {{ title }}</a></li>
            {{else }}
            <li>{{ filename }} <span class="warning" style="color:red;">(!)</span></li>
            {{/if}}
          {{/each}}
          </ol>
          {{/if}}
        </article>

      </article>
    </main>
  <script>

  </script>
  </body>
</html>
      <article class="grid">
        <article>
          <h3>cover</h3>
          <hr>
          {{#if tumulte.cover.url }}
          <img style="height: 200px;" src="{{ tumulte.cover.url }}" />
          {{else}}
          <a href="{{ tumulte.locations.share_url }}" target="_blank">
            <button>Ajouter</button>
          </a>
          <span class="warning" style="color: red;">(!)</span>
          {{/if}}
        </article>

        <article>
          <h3>tracks</h3>
          <hr>

          {{#if tumulte.tracks.length}}
          <ol>
          {{#each tumulte.tracks}}
            {{#if well_formed}}
            <li><a href="{{ url }}">{{ artist }} - {{ title }}</a></li>
            {{else }}
            <li>{{ filename }} <span class="warning" style="color: red;">(!)</span></li>
            {{/if}}
          {{/each}}
          </ol>
          {{else}}
          <a href="{{ tumulte.locations.share_url }}" target="_blank">
            <button>Ajouter</button>
          </a>
          <span class="warning" style="color: red;">(!)</span>
          {{/if}}

        </article>
      </article>
    </main>
  </body>

      <article class="grid">
        <article>
          <h4>
            <nav>
              <ul>
                <li><h4>images</h4></li>
              </ul>
              <ul>
                <li><a href="{{ tumulte.locations.share_url }}" target="_blank" role="button"  data-placement="left"data-tooltip="Gestion des fichiers et des métadonnées" {{#unless tumulte.cover.url}}style="background-color: #D93526;"{{/unless}}>✎</a></li>
              </ul>
            </nav>
          </h4>
          <hr>
          {{#if tumulte.cover.url }}
          <img src="{{ tumulte.cover.url }}" />
          {{/if}}
        </article>

        <article>
          <h4>
            <nav>
              <ul>
                <li><h4>audio</h4></li>
              </ul>
              <ul>
                <li><a href="{{ tumulte.locations.share_url }}" target="_blank" role="button" data-placement="left"data-tooltip="Gestion des fichiers et des métadonnées" {{#unless tumulte.tracks.length}}style="background-color: #D93526;"{{/unless}}>✎</a></li>
              </ul>
            </nav>
          </h4>

          <hr>
          {{#if tumulte.tracks.length}}
          <ol>
          {{#each tumulte.tracks}}
            {{#if well_formed}}
            <li><a href="{{ url }}">{{ artist }} - {{ title }}</a></li>
            {{else }}
            <li>{{ filename }} <span class="warning" style="color:red;">(!)</span></li>
            {{/if}}
          {{/each}}
          </ol>
          {{/if}}

        </article>
      </article>
    </main>
  </body>

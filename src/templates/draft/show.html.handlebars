<html data-theme="light">
  <head>
    <title>{{ tumulte.title }} | draft | tumultes</title>

    <meta charset="utf8">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.zinc.min.css" />

  </head>

  <body class="draft show">
    <main class="container-fluid">
      <article>
        <nav>
          <ul>
            <li>
              <hgroup>
              <h1>
                 {{ tumulte.title }}
              </h1>
              <p>
                <small><a href="{{ tumulte.locations.http_root}}"><strong>Tumulte</strong></a> publié par <strong>{{#each tumulte.curators }} {{ . }} {{/each}}</strong></small>
                <small>le <strong>{{ tumulte.creation_date_pretty }}</strong></small>
              </p>
              </hgroup>
            </li>
          </ul>
          <ul></ul>
          <ul>
            <li><a href="" role="button"  data-placement="left"data-tooltip="Synchronisation de l'interface avec la dernière version du tumulte">↻</a></li>
            <li>
              <a role="button"  data-placement="left"data-tooltip="Aperçu de l'aspect qu'aura la page publique" href="{{ tumulte.locations.preview_url }}" target="_blank">◎</a>
            </li>
            {{#if tumulte.ready }}
            <li><a  data-placement="left"data-tooltip="Libérer le tumulte" role="button" href="{{ tumulte.locations.dist_url }}" target="_blank" style="background-color: #00895A;">✓</a></button></li>
            {{else}}
            <li><a role="button" data-tooltip="Ce tumulte n'est pas encore prêt à être publié" data-placement="left" href="#" target="_blank" style="background-color: #D93526;">☒</a></li>
            {{/if}}
          </ul>
        </nav>
        </article>

<html data-theme="light">
  <head>
    <title>{{ group }} | drafts | tumultes</title>
    <meta charset="utf8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.purple.min.css" />
    <style>
        article.grid {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          grid-auto-rows: minmax(100px, auto);
        }

        img.cover {
          width: auto;
        }

        mark.draft, mark.badge {
          padding: 0.2em;
          font-size: small;
          color: white;

        }

        mark.badge {
          background-color: darkorange;
        }

        mark.draft {
          background-color: darkgrey;
        }

        mark.complete {
          background-color: green;
        }

        mark.incomplete {
          background-color: red;
        }

        p.creation_date {
          font-size: .6em !important;
        }

        article h2 {
          font-size: 1em;
        }
    </style>
  </head>

  <body class="draft list">
    <header>
      <article>
        <nav>
          <ul>
            <li>
              <hgroup>
                <h1>
                  <a href="https://tumultes.incongru.org">Tumultes</a> &gt; Mes brouillons
                </h1>
              </hgroup>
            </li>
          </ul>
        </nav>
      </article>

    </header>

    <main class="container-fluid">

      <article class="grid">
    {{#each tumultes}}
        <article>
          <header>
            <hgroup>
            <h2>
              <a href="{{ tumulte.locations.editt_url }}">{{ tumulte.title }}</a>
            </h2>
            <p class="creation_date">
              créé le {{ tumulte.creation_date_pretty }}
            </p>
            </hgroup>
          </header>
          <img class="cover" src="{{ tumulte.cover.url }}" />
          <footer>


            <nav>
              <ul>
                <li> <mark class="draft" data-tooltip="Ce tumulte n'est pas visible publiquement">brouillon</mark></li>
                {{#if tumulte.ready }}
                <li> <mark class="draft complete" data-tooltip="Prêt à être publié">prêt</mark></li>
                {{else}}
                <li> <mark class="draft incomplete" data-tooltip="Des problèmes empêchent la publication">erreurs</mark></li>
                {{/if}}
              </ul>
              <ul>
                <li><mark class="badge audio" data-tooltip="Fichiers audio">{{ tumulte.tracks.length }} ♫</mark></li>
              </ul>
            </nav>
          </footer>
        </article>
    {{/each}}
      </article>

    </main>

  </body>
</html>